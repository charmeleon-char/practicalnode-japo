extends layout
block page
  - var menu = 'easy'
block content

    h2 Post an Article
    div= error
    div.col-md-8
      form(action="/easy", method="POST", role="form")
        div.form-group
          label(for="numero") numero
          input#numero.form-control(name="numero", type="text", placeholder="JavaScript is good")
        div.form-group
          label(for="letra") letra
          input#letra.form-control(name="letra", type="text", placeholder="js-good")
          span.help-block This string will be used in the URL.
        div.form-group
          label(for="email") Email
          input#slug.form-control(name="email", type="text", placeholder="hi@goodbye.com")
        div.form-group
          label(for="Genero de Publicacion") Tipo
          input#slug.form-control(name="tipo", type="text", placeholder="accion")
        div.form-group
          label(for="text") Text
          textarea#text.form-control(rows="5", name="text", placeholder="Text")
        p
          button.btn.btn-primary(type="submit") Save
